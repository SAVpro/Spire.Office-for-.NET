<UserControl x:Class="GridSL.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="280"  Width="600" Height="570"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">

    <Grid x:Name="LayoutRoot" Background="#FB039AE6">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" MaxHeight="40" MinHeight="40" />
            <RowDefinition />
            <RowDefinition Height="40" MaxHeight="40" MinHeight="40" />
        </Grid.RowDefinitions>
        <sdk:Label HorizontalAlignment="Center" Margin="0" Name="labelTitle" VerticalAlignment="Center" Content="Vendor List" FontSize="15" Grid.Row="0" HorizontalContentAlignment="Center" Foreground="White" />
        <sdk:DataGrid AutoGenerateColumns="True" HorizontalAlignment="Stretch" Margin="3,0" Name="dataGridVendorList" VerticalAlignment="Stretch" Grid.Row="1" Grid.RowSpan="1" />
        <Button Content="Run" HorizontalAlignment="Right" Margin="0,0,3,0" Name="buttonRub" VerticalAlignment="Center" Grid.Row="2" Width="70" />
    </Grid>
</UserControl>